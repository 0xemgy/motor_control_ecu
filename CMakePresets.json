{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "cmakeExecutable": "${sourceDir}/tools/cmake/bin/cmake.exe",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_MAKE_PROGRAM": "${sourceDir}/tools/ninja/ninja.exe"
            },
            "hidden": true
        },
        {
            "name": "arm_base",
            "toolchainFile": "${sourceDir}/cmake/toolchain_arm_gcc.cmake",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "UNIT_TEST": "OFF"
            },
            "inherits": [
                "base"
            ],
            "hidden": true
        },
        {
            "name": "mingw_base",
            "toolchainFile": "${sourceDir}/cmake/toolchain_mingw.cmake",
            "cacheVariables": {
                "UNIT_TEST": "ON"
            },
            "inherits": [
                "base"
            ],
            "hidden": true
        },
        {
            "name": "debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "inherits": [
                "arm_base"
            ]
        },
        {
            "name": "release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "inherits": [
                "arm_base"
            ]
        },
        {
            "name": "test",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "inherits": [
                "mingw_base"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "build_base",
            "targets": [
                "build",
                "analyze_all",
                "analyze_naming",
                "analyze_formatting",
                "analyze_comments",
                "analyze_static_code",
                "analyze_static_code_2",
                "analyze_metrics",
                "analyze_memory"
            ],
            "hidden": true
        },
        {
            "name": "test_base",
            "targets": [
                "test_build_all",
                "test_run_all",
                "test_coverage",
                "test_util_memcpy",
                "test_util_memset"
            ],
            "hidden": true
        },
        {
            "name": "debug",
            "configurePreset": "debug",
            "inherits": [
                "build_base"
            ]
        },
        {
            "name": "release",
            "configurePreset": "release",
            "inherits": [
                "build_base"
            ]
        },
        {
            "name": "test",
            "configurePreset": "test",
            "inherits": [
                "test_base"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "test",
            "configurePreset": "test"
        }
    ]
}
