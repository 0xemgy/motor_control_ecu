{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "cmakeExecutable": "${sourceDir}/tools/cmake/bin/cmake.exe",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_MAKE_PROGRAM": "${sourceDir}/tools/ninja/ninja.exe"
            },
            "hidden": true
        },
        {
            "name": "arm_base",
            "toolchainFile": "${sourceDir}/cmake/toolchain_arm_gcc.cmake",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "inherits": [
                "base"
            ],
            "hidden": true
        },
        {
            "name": "debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "inherits": [
                "arm_base"
            ]
        },
        {
            "name": "release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "inherits": [
                "arm_base"
            ]
        }
    ]
}
