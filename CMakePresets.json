{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "cmakeExecutable": "${sourceDir}/tools/cmake/bin/cmake.exe",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "toolchainFile": "${sourceDir}/cmake/arm-gcc-toolchain.cmake",
            "cacheVariables": {
                "CMAKE_MAKE_PROGRAM": "${sourceDir}/tools/ninja/ninja.exe"
            },
            "hidden": true
        },
        {
            "name": "debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "inherits": [
                "base"
            ]
        },
        {
            "name": "release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "inherits": [
                "base"
            ]
        },
        {
            "name": "analyze"
        },
        {
            "name": "test"
        }
    ],
    "buildPresets": [
        {
            "name": "base",
            "targets": [
                "app"
            ],
            "hidden": true
        },
        {
            "name": "debug",
            "configurePreset": "debug",
            "inherits": [
                "base"
            ]
        },
        {
            "name": "release",
            "configurePreset": "release",
            "inherits": [
                "base"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "test",
            "configurePreset": "test"
        }
    ]
}
